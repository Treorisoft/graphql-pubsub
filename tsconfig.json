{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "lib": ["es2022", "DOM", "esnext"]
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}
